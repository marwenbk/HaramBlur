{
	"manifest_version": 3,
	"name": "Face Detection",
	"version": "1.0",
	"permissions": ["activeTab", "scripting"],

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png"
	},

	"host_permissions": ["<all_urls>"],
	"content_scripts": [
		{
			"js": ["src/content.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["src/worker/worker.js", "src/worker/worker.html", "src/worker/worker-setup.js"],
			"matches": ["<all_urls>"]
		}
	]
}
